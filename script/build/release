#!/bin/bash

set -euo pipefail

GORELEASER_VERSION=v0.106

cd "$(dirname "$0")/.." || exit

read -r -p "Are you sure? [y/N] " response
if [[ "$response" =~ ^([yY][eE][sS]|[yY])+$ ]]
then
  docker run --rm --privileged \
    -v "$PWD":/flipt \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -w /flipt \
    -e GITHUB_TOKEN \
    -e DOCKER_USERNAME \
    -e DOCKER_PASSWORD \
    goreleaser/goreleaser:"$GORELEASER_VERSION"-cgo --rm-dist
fi
