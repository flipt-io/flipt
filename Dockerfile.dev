FROM golang:1.25-alpine3.21

WORKDIR /server

RUN apk add --update --no-cache git bash gcc build-base binutils-gold

RUN git clone https://github.com/magefile/mage && \
  cd mage && \
  go run bootstrap.go

COPY go.mod .
COPY go.sum .
COPY ./errors ./errors
COPY ./rpc ./rpc
COPY ./sdk ./sdk
COPY ./core ./core

RUN go mod download -x

RUN mkdir -p /etc/flipt && \
  mkdir -p /var/opt/flipt

EXPOSE 8080
EXPOSE 9000
