{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "id": "flipt.schema.json",
  "type": "object",
  "title": "flipt-schema-v2",
  "description": "Flipt config file is a YAML file defining how to configure the Flipt application.",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "title": "Version",
      "enum": ["2.0"],
      "default": "2.0"
    },
    "experimental": {
      "type": "object",
      "title": "Experimental",
      "additionalProperties": false,
      "properties": {}
    },
    "analytics": {
      "type": "object",
      "title": "Analytics",
      "additionalProperties": false,
      "properties": {
        "storage": {
          "type": "object",
          "title": "Analytics Storage",
          "properties": {
            "clickhouse": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "url": {
                  "type": "string",
                  "default": ""
                }
              },
              "additionalProperties": false
            },
            "prometheus": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "url": {
                  "type": "string",
                  "default": ""
                },
                "headers": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "buffer": {
          "type": "object",
          "title": "Analytics Buffer",
          "properties": {
            "capacity": {
              "type": "integer"
            },
            "flush_period": {
              "type": "string",
              "default": "2m",
              "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "authentication": {
      "type": "object",
      "title": "Authentication",
      "additionalProperties": false,
      "properties": {
        "required": {
          "type": "boolean",
          "default": false
        },
        "exclude": {
          "type": "object",
          "title": "Authentication Exclude",
          "properties": {
            "management": {
              "type": "boolean",
              "default": false
            },
            "metadata": {
              "type": "boolean",
              "default": false
            },
            "evaluation": {
              "type": "boolean",
              "default": false
            },
            "ofrep": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "session": {
          "type": "object",
          "title": "Authentication Session",
          "properties": {
            "domain": {
              "type": "string"
            },
            "secure": {
              "type": "boolean"
            },
            "token_lifetime": {
              "type": "string",
              "default": "24h",
              "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
            },
            "state_lifetime": {
              "type": "string",
              "default": "10m",
              "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
            },
            "csrf": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string"
                }
              }
            },
            "storage": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["memory"]
                    },
                    "cleanup": {
                      "type": "object",
                      "properties": {
                        "grace_period": {
                          "type": "string",
                          "default": "30m",
                          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
                        }
                      }
                    }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["redis"]
                    },
                    "cleanup": {
                      "type": "object",
                      "properties": {
                        "grace_period": {
                          "type": "string",
                          "default": "30m",
                          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
                        }
                      }
                    },
                    "redis": {
                      "type": "object",
                      "properties": {
                        "host": {
                          "type": "string",
                          "default": "localhost"
                        },
                        "port": {
                          "type": "integer",
                          "default": 6379
                        },
                        "require_tls": {
                          "type": "boolean",
                          "default": false
                        },
                        "db": {
                          "type": "integer",
                          "default": 0
                        },
                        "username": {
                          "type": "string"
                        },
                        "password": {
                          "type": "string"
                        },
                        "pool_size": {
                          "type": "integer",
                          "default": 0
                        },
                        "min_idle_conn": {
                          "type": "integer",
                          "default": 0
                        },
                        "conn_max_idle_time": {
                          "oneOf": [
                            {
                              "type": "string",
                              "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
                            },
                            {
                              "type": "integer"
                            }
                          ],
                          "default": 0
                        },
                        "net_timeout": {
                          "oneOf": [
                            {
                              "type": "string",
                              "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
                            },
                            {
                              "type": "integer"
                            }
                          ],
                          "default": 0
                        },
                        "ca_cert_path": {
                          "type": "string"
                        },
                        "ca_cert_bytes": {
                          "type": "string"
                        },
                        "insecure_skip_tls": {
                          "type": "boolean",
                          "default": false
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          },
          "additionalProperties": false
        },
        "methods": {
          "type": "object",
          "title": "Authentication Methods",
          "additionalProperties": false,
          "properties": {
            "token": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "storage": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["static"]
                    },
                    "tokens": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "credential": {
                            "type": "string"
                          },
                          "metadata": {
                            "type": "object",
                            "additionalProperties": {
                              "type": "string"
                            }
                          }
                        },
                        "required": ["name", "credential"]
                      }
                    }
                  },
                  "required": ["type", "tokens"]
                }
              },
              "additionalProperties": false
            },
            "oidc": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "providers": {
                  "type": "object",
                  "patternProperties": {
                    "^.*$": {
                      "$ref": "#/definitions/authentication_oidc_provider"
                    }
                  },
                  "additionalProperties": false
                },
                "email_matches": {
                  "oneOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    {
                      "type": "string"
                    }
                  ]
                }
              },
              "additionalProperties": false
            },
            "kubernetes": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "discovery_url": {
                  "type": "string"
                },
                "ca_path": {
                  "type": "string"
                },
                "service_account_token_path": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "github": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "server_url": {
                  "type": "string"
                },
                "api_url": {
                  "type": "string"
                },
                "client_secret": {
                  "type": "string"
                },
                "client_id": {
                  "type": "string"
                },
                "redirect_address": {
                  "type": "string"
                },
                "scopes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "allowed_organizations": {
                  "oneOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    {
                      "type": "string"
                    }
                  ]
                },
                "allowed_teams": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "additionalProperties": false
            },
            "jwt": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false
                },
                "validate_claims": {
                  "type": "object",
                  "properties": {
                    "issuer": {
                      "type": "string"
                    },
                    "subject": {
                      "type": "string"
                    },
                    "audiences": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "jwks_url": {
                  "type": "string"
                },
                "public_key_file": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    },
    "authorization": {
      "type": "object",
      "title": "Authorization",
      "additionalProperties": false,
      "properties": {
        "required": {
          "type": "boolean",
          "default": false
        },
        "backend": {
          "type": "string",
          "enum": ["", "local", "bundle"],
          "default": ""
        },
        "local": {
          "type": "object",
          "title": "Authorization Local",
          "additionalProperties": false,
          "properties": {
            "policy": {
              "type": "object",
              "properties": {
                "poll_interval": {
                  "type": "string",
                  "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$",
                  "default": "5m"
                },
                "path": {
                  "type": "string"
                }
              }
            },
            "data": {
              "type": "object",
              "properties": {
                "poll_interval": {
                  "type": "string",
                  "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$",
                  "default": "5m"
                },
                "path": {
                  "type": "string"
                }
              }
            }
          }
        },
        "bundle": {
          "type": "object",
          "title": "Authorization Bundle",
          "additionalProperties": false,
          "properties": {
            "configuration": {
              "type": "string"
            }
          }
        }
      }
    },
    "cors": {
      "type": "object",
      "title": "CORS",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "allowed_origins": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": ["*"]
            },
            {
              "type": "string"
            }
          ]
        },
        "allowed_headers": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "Accept",
                "Authorization",
                "Content-Type",
                "X-CSRF-Token",
                "X-Flipt-Namespace",
                "X-Flipt-Accept-Server-Version"
              ]
            },
            {
              "type": "string"
            }
          ]
        }
      }
    },
    "diagnostics": {
      "type": "object",
      "title": "Diagnostics",
      "additionalProperties": false,
      "properties": {
        "profiling": {
          "type": "object",
          "title": "Diagnostics Profiling",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    },
    "environments": {
      "type": "object",
      "title": "Environments",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "properties": {
            "default": {
              "type": "boolean",
              "default": false
            },
            "storage": {
              "type": "string"
            },
            "directory": {
              "type": "string",
              "default": ""
            }
          },
          "required": ["storage"]
        }
      }
    },
    "storage": {
      "type": "object",
      "title": "Storage",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "properties": {
            "remote": {
              "type": "string"
            },
            "backend": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["memory", "local"],
                  "default": "memory"
                },
                "path": {
                  "type": "string"
                }
              }
            },
            "branch": {
              "type": "string",
              "default": "main"
            },
            "poll_interval": {
              "type": "string",
              "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$",
              "default": "30s"
            },
            "ca_cert_path": {
              "type": "string"
            },
            "ca_cert_bytes": {
              "type": "string"
            },
            "insecure_skip_tls": {
              "type": "boolean",
              "default": false
            },
            "credentials": {
              "type": "string"
            },
            "publishers": {
              "type": "object",
              "properties": {
                "object": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["", "s3", "azblob", "googlecloud"],
                      "default": ""
                    },
                    "s3": {
                      "type": "object",
                      "properties": {
                        "region": {
                          "type": "string"
                        },
                        "bucket": {
                          "type": "string"
                        },
                        "prefix": {
                          "type": "string"
                        },
                        "endpoint": {
                          "type": "string"
                        },
                        "poll_interval": {
                          "type": "string",
                          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$",
                          "default": "1m"
                        }
                      }
                    },
                    "azblob": {
                      "type": "object",
                      "properties": {
                        "container": {
                          "type": "string"
                        },
                        "endpoint": {
                          "type": "string"
                        },
                        "poll_interval": {
                          "type": "string",
                          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$",
                          "default": "1m"
                        }
                      }
                    },
                    "googlecloud": {
                      "type": "object",
                      "properties": {
                        "bucket": {
                          "type": "string"
                        },
                        "prefix": {
                          "type": "string"
                        },
                        "poll_interval": {
                          "type": "string",
                          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$",
                          "default": "1m"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "credentials": {
      "type": "object",
      "patternProperties": {
         "^.*$": {
           "oneOf": [
             {
               "type": "object",
               "properties": {
                 "basic": {
                   "type": "object",
                   "properties": {
                     "username": {
                       "type": "string"
                     },
                     "password": {
                       "type": "string"
                     }
                   },
                   "required": ["username", "password"]
                 }
               }
             },
             {
               "type": "object",
               "properties": {
                 "token": {
                   "type": "object",
                   "properties": {
                     "access_token": {
                       "type": "string"
                     }
                   },
                   "required": ["access_token"]
                 }
               }
             },
             {
               "type": "object",
               "properties": {
                 "ssh": {
                   "type": "object",
                   "properties": {
                     "user": {
                       "type": "string",
                       "default": "git"
                     },
                     "password": {
                       "type": "string"
                     },
                     "private_key_path": {
                       "type": "string"
                     }
                   },
                   "required": ["password", "private_key_path"]
                 }
               }
             },
             {
               "type": "object",
               "properties": {
                 "ssh": {
                   "type": "object",
                   "properties": {
                     "user": {
                       "type": "string",
                       "default": "git"
                     },
                     "password": {
                       "type": "string"
                     },
                     "private_key_bytes": {
                       "type": "string"
                     }
                   },
                   "required": ["password", "private_key_bytes"]
                 }
               }
             }
           ]
         }
       }
    },
    "log": {
      "type": "object",
      "title": "Log",
      "additionalProperties": false,
      "properties": {
        "file": {
          "type": "string"
        },
        "encoding": {
          "type": "string",
          "enum": ["console", "json"],
          "default": "console"
        },
        "level": {
          "type": "string",
          "enum": [
            "debug", "DEBUG",
            "error", "ERROR",
            "fatal", "FATAL",
            "info", "INFO",
            "panic", "PANIC",
            "warn", "WARN"
          ]
        },
        "grpc_level": {
          "type": "string",
          "enum": [
            "debug", "DEBUG",
            "error", "ERROR",
            "fatal", "FATAL",
            "info", "INFO",
            "panic", "PANIC",
            "warn", "WARN"
          ]
        },
        "keys": {
          "type": "object",
          "title": "Log Keys",
          "properties": {
            "time": {
              "type": "string",
              "default": "T"
            },
            "level": {
              "type": "string",
              "default": "L"
            },
            "message": {
              "type": "string",
              "default": "M"
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "title": "Meta",
      "additionalProperties": false,
      "properties": {
        "check_for_updates": {
          "type": "boolean",
          "default": true
        },
        "telemetry_enabled": {
          "type": "boolean",
          "default": true
        },
        "state_directory": {
          "type": "string",
          "default": "$HOME/.config/flipt"
        }
      }
    },
    "server": {
      "type": "object",
      "title": "Server",
      "additionalProperties": false,
      "properties": {
        "protocol": {
          "type": "string",
          "enum": ["http", "https"],
          "default": "http"
        },
        "host": {
          "type": "string",
          "default": "0.0.0.0"
        },
        "https_port": {
          "type": "integer",
          "default": 443
        },
        "http_port": {
          "type": "integer",
          "default": 8080
        },
        "grpc_port": {
          "type": "integer",
          "default": 9000
        },
        "cert_file": {
          "type": "string"
        },
        "cert_key": {
          "type": "string"
        },
        "grpc_conn_max_idle_time": {
          "type": "string",
          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
        },
        "grpc_conn_max_age": {
          "type": "string",
          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
        },
        "grpc_conn_max_age_grace": {
          "type": "string",
          "pattern": "^([0-9]+(ns|us|µs|ms|s|m|h))+$"
        }
      }
    },
    "metrics": {
      "type": "object",
      "title": "Metrics",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "exporter": {
          "type": "string",
          "enum": ["prometheus", "otlp"],
          "default": "prometheus"
        },
        "otlp": {
          "type": "object",
          "title": "Metrics OTLP",
          "properties": {
            "endpoint": {
              "type": "string",
              "default": "localhost:4317"
            },
            "headers": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "tracing": {
      "type": "object",
      "title": "Tracing",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "sampling_ratio": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 1
        },
        "propagators": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "tracecontext",
              "baggage",
              "b3",
              "b3multi",
              "jaeger",
              "xray",
              "ottrace",
              "none"
            ]
          },
          "default": ["tracecontext", "baggage"]
        },
        "otlp": {
          "type": "object",
          "title": "Tracing OTLP",
          "properties": {
            "endpoint": {
              "type": "string",
              "default": "localhost:4317"
            },
            "headers": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "ui": {
      "type": "object",
      "title": "UI",
      "additionalProperties": false,
      "properties": {
        "default_theme": {
          "type": "string",
          "enum": ["light", "dark", "system"],
          "default": "system"
        },
        "topbar": {
          "type": "object",
          "title": "UI Topbar",
          "properties": {
            "color": {
              "type": "string"
            },
            "label": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "authentication_oidc_provider": {
      "type": "object",
      "properties": {
        "issuer_url": {
          "type": "string"
        },
        "client_id": {
          "type": "string"
        },
        "client_secret": {
          "type": "string"
        },
        "redirect_address": {
          "type": "string"
        },
        "nonce": {
          "type": "string"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "use_pkce": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
