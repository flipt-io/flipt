{
  extends: ["config:recommended"],
  baseBranchPatterns: ["main", "v2"],
  timezone: "America/New_York",
  schedule: ["* 2 * * 1"],
  prHourlyLimit: 10,
  labels: ["dependencies", "automerge"],
  postUpdateOptions: ["gomodTidy"],
  packageRules: [
    // Ignore internal Flipt packages
    {
      matchManagers: ["gomod"],
      matchPackagePatterns: ["^go\\.flipt\\.io/flipt/.*"],
      enabled: false,
    },
    {
      matchManagers: ["gomod"],
      matchBaseBranches: ["main", "v2"],
      labels: ["dependencies", "go", "automerge"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: false,
    },
    {
      matchManagers: ["npm"],
      matchBaseBranches: ["main", "v2"],
      matchFileNames: ["/ui/**"],
      labels: ["dependencies", "javascript", "automerge"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: false,
    },
    {
      matchManagers: ["github-actions"],
      matchBaseBranches: ["main", "v2"],
      labels: ["dependencies", "github_actions", "automerge"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: false,
    },
    {
      matchManagers: ["dockerfile"],
      matchBaseBranches: ["main", "v2"],
      matchFileNames: ["/build/**"],
      labels: ["dependencies", "docker", "automerge"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: false,
    },
    {
      matchUpdateTypes: ["major"],
      enabled: false,
    },
  ],
}
